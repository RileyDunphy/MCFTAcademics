@page
@model MCFTAcademics.CourseCodeEditorModel
@using BL;
@{
    var course = (Course)ViewData["ViewData_Course"];
    int count = 0;
}
@if (!string.IsNullOrEmpty(Model.alertMessage))
{
    <script>alert("@Model.alertMessage");</script>
}

<h2>@ViewData["Title"] Course Code Editor</h2>
<form method="post">
    <div class="row">
        <div class="col-lg-1">
            <span class="label label-default"> Course Codes</span>
        </div>
        <div class="col-lg-4">
            <table class="table" id="tblOne">
                <thead>
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.course != null)
                    {
                        count = 0;

                        var coursecodes = Model.course?.GetCourseCodes()?.ToList() ?? new List<CourseCode>();

                        @for (var i = 0; i < coursecodes.Count; i++)
                        {
                            <tr id="CourseCode-@i">
                                <td><input class="form-control" type="text" name="txtCode+@count" value=@(coursecodes[i].Code)></td>
                                <td><input class="form-control" name="txtStartDate+@count" type="date" min="2000-01-01" max="2090-01-01" required id="txtStartDate" value=@(coursecodes[i].From)></td>
                                <td><input class="form-control" name="txtEndDate+@count" type="date" min="2000-01-01" max="2090-01-01" required id="txtEndDate" value=@(coursecodes[i].To)></td>
                                <td>
                                    <button type="button" data-id="CourseCode-@i" class="Delete btn btn-sm btn-danger d-none d-md-inline-block">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                    <tr>
                        <td><input class="form-control" type="text" name="txtCode+@count"></td>
                        <td><input class="form-control" name="txtStartDate+@count" type="date" min="2000-01-01" max="2090-01-01" required id="txtStartDate"></td>
                        <td><input class="form-control" name="txtEndDate+@count" type="date" min="2000-01-01" max="2090-01-01" required id="txtEndDate"></td>
                        <td><button type="button" class="Add btn btn-primary">Add</button></td>
                    </tr>
                </tbody>
            </table>
            <input class="form-control" type="hidden" name="count" value="@count" id="hiddenCount">
        </div>
        <div class="col-md-3 col-md-offset-3">
            <button type="submit" class="btn btn-danger">Submit Changes</button>
        </div>
    </div>
</form>

@section scripts{
    <script type="text/javascript">
        $("body").on("click", ".table .Delete", function () {

            if (confirm("Do you want to delete this row?")) {
                var row = $(this).closest("tr");

                row.remove();
                var count = parseInt($('#hiddenCount').val()) - parseInt(1);
                $('#hiddenCount').val(count);
                var i = 0;
                $('#tblOne > tbody  > tr').each(function () {
                    $(this).find("td:first").find('input').attr('name', 'txtCode+' + i);
                    $(this).find("td:first").next('td').find('input').attr('name', 'txtStartDate+' + i);
                    $(this).find("td:first").next('td').next('td').find('input').attr('name', 'txtEndDate+' + i);
                    i++
                });
            }
        });

        $("body").on("click", ".table .Add", function addRow() {
            //Get the table row
            var row = $(this).closest("tr");

            if (confirm("Do you want to add this row?")) {
                //Find out what number row it is
                var count = parseInt($('#hiddenCount').val()) + parseInt(1);
                //Change the button to a delete button
                row.find("button").parent().html("<button type=\"button\" class=\"Delete btn btn-sm btn-danger d-none d-md-inline-block\">Delete</button>");
                //Add a new blank row after
                row.after('<tr> <td><input class="form-control" type="text" name="txtCode+' + count + '"></td> <td><input class="form-control" name="txtStartDate+' + count + '" type="date" min="2000-01-01" max="2090-01-01" required id="txtStartDate"></td><td><input class="form-control" name="txtEndDate+' + count + '" type="date" min="2000-01-01" max="2090-01-01" required id="txtEndDate"></td><td><button type="button" class="Add btn btn-primary">Add</button></td></tr>');
                $('#hiddenCount').val(count);
            }
        });
    </script>
}