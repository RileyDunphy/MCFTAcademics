@page
@model MCFTAcademics.ManageAllCoursesModel
@{
    ViewData["Title"] = "ManageAllCourses";
}
@using System.Collections;
@using BL;
@{

    List<Course> courses = Course.getAllCourses();
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Manage Courses</h2>
        </div>
    </div>
    <form>
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default">Course Code</span>
            </div>
            <div class="col-lg-2">
                <input class="form-control" type="text" asp-for="courseCode.Code" id="txtCourseCode">
            </div>
            <div class="col-md-4 col-md-offset-4">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuCourses" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Please select a course to change
                        <span class="caret"> </span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuCourses">
                        @foreach (Course c in courses)
                        {
                            <li> <a asp-page-handler="SelectCourse" asp-route-id="@c.Id">@c.Name</a> </li>
                        }
                    </ul>
                </div>
            </div>
        </div> <br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default">Course Title</span>
            </div>
            <div class="col-lg-2">
                <input class="form-control" type="text" asp-for="course.Name" id="txtCourseTitle">
            </div>
        </div> <br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default descrip">Course Description</span>
            </div>
            <div class="col-lg-8">
                <textarea class="form-control" rows="3" asp-for="course.Description" id="txtCourseDescrip"></textarea>
            </div>
        </div> <br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default">Credit</span>
            </div>
            <div class="col-lg-2">
                <input class="form-control" type="text" asp-for="course.Credit" id="txtCredit">
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default"> Lecture Hours</span>
            </div>
            <div class="col-lg-2">
                <input class="form-control" type="text" asp-for="course.LectureHours" id="txtLectureHours">
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default"> Lab Hours</span>
            </div>
            <div class="col-lg-2">
                <input class="form-control" type="text" asp-for="course.LabHours" id="txtLabHours">
            </div>
            <div class="col-lg-1">
                <span class="label label-default"> Total Course Hours</span>
            </div>
            <div class="col-lg-1">
                <input class="form-control" type="text" readonly asp-for="course.TotalHours" id="txtTotalHours">
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default"> Exam Hours</span>
            </div>
            <div class="col-lg-2">
                <input class="form-control" type="text" asp-for="course.ExamHours" id="txtExamHours">
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default"> Revision Number</span>
            </div>
            <div class="col-lg-2">
                <input class="form-control" type="text" asp-for="courseCode.RevisionNumber" id="txtRevisionNumber">
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-1">
                <span class="label label-default"> Prerequisites</span>
            </div>
            <div class="col-lg-4">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Req.</th>
                            <th scope="col">Coreq.</th>
                            <th scope="col">CourseCode</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.course != null)
                        {
                            int count = 0;

                            @foreach (Prerequisite prereq in Model.course.Prerequisites)
                            {
                                <tr>
                                    @if (prereq.IsPrereq == true)
                                    {
                                        <td><input class="form-check-input" asp-for="@prereq.IsPrereq" type="radio" name="reqRadio+@count" checked value=""></td>
                                        <td><input class="form-check-input" asp-for="@prereq.IsCoreq" type="radio" name="reqRadio+@count" value=""></td>
                                    }
                                    else if (prereq.IsCoreq == true)
                                    {
                                        <td><input class="form-check-input" asp-for="@prereq.IsPrereq" type="radio" name="reqRadio+@count" value=""></td>
                                        <td><input class="form-check-input" asp-for="@prereq.IsCoreq" type="radio" name="reqRadio+@count" checked value=""></td>
                                    }
                                    <td><input class="form-control" type="text" asp-for="@prereq.PrereqId" id="txtCourseCode" value="@BL.CourseCode.getNewestCourseCodeById(prereq.PrereqId).Code"></td>
                                    <td>@Html.ActionLink("Delete", "Delete", new { prereq = count, id = Model.course.Id})</td>
                                </tr>
                                count++;
                            }
                        }
                        <tr>
                            <td><input class="form-check-input" type="radio" name="reqRadioNew" checked value=""></td>
                            <td><input class="form-check-input" type="radio" name="reqRadioNew" value=""></td>
                            <td><input class="form-control" type="text" id="txtCourseCode" value=""></td>
                            <td><button type="button" class="btn btn-primary">Add</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3 col-md-offset-3">
                <button type="submit" class="btn btn-danger">Submit Changes</button>
            </div>
        </div>
    </form>
</div>