@page
@model MCFTAcademics.ViewAllCoursesModel
@using System.Collections;
@using BL;
@{
    ViewData["Title"] = "ViewAllCourses";
}
@{

    List<Course> courses = Course.getAllCourses();
}

<h2>MCFT Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Credit</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Course c in courses)
        {
            <tr>
                <th scope="row">@c.Name</th>
                <td>@c.Credit</td>
                <td>@c.From.ToShortDateString()</td>
                <td>@c.To.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>