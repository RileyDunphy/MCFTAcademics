@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- These links will do nothing for now -->
<div class="row">
    <div class="col-md-6">
        <h2>Courses</h2>
        <!-- XXX: Fancier bootstrap versions -->
        <dl>
            <dt><a asp-page="/ViewCourses">View courses</a></dt>
            <dd>View courses you are instructing</dd>
            <dt><a asp-page="/ManageCourses">Manage courses</a></dt>
            <dd>Open management page for courses you are instructing</dd>
            <dt><a asp-page="/ViewCourses" asp-page-handler="all">View all courses</a></dt>
            <dd>Show a list of all courses</dd>
            <dt><a asp-page="/ManageCourses" asp-page-handler="all">Manage all courses</a></dt>
            <dd>Manage all courses</dd>
        </dl>
        @if (User.IsInRole("Admin")) //dummy check
        {
            <h2>Student grades</h2>
            <dl>
                <dt><a asp-page="/GradesByCourse">View grades</a></dt>
                <dd>Show grades of students you are instructing</dd>
                <dt><a asp-page="/ViewGrades" asp-page-handler="all">View grades</a></dt>
                <dd>Shows the grades of students you are instructing</dd>
                <dt><a href="#">Manage grades</a></dt>
                <dd>Submit student pages</dd>
                <dt><a asp-page="/GradesByStudentId">Grades By Student Id</a></dt>
                <dd>Search and list an individual students grades</dd>
            </dl>
        }
    </div>
    <div class="col-md-6">
        <h2>Academic reports</h2>
        <dl>
            <dt><a href="ReportGenerate">Generate reports</a></dt>
            <dd>Generate academic reports page</dd>
        </dl>
        @if (User.IsInRole("Admin"))
        {
            <h2>Administrative tasks</h2>
            <dl>
                <dt><a asp-page="/ViewUsers">View users</a></dt>
                <dd>View and manage all users in the system, including changing passwords and role management</dd>
                <dt><a asp-page="/CreateUser">Create user</a></dt>
                <dd>Enroll users into the system</dd>
                <dt><a asp-page="/LockGrades">Lock/Unlock Grades</a></dt>
                <dd>Lock and unlock grades for each student in each course</dd>
            </dl>
        }
    </div>
</div>
