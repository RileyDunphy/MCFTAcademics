@page
@model MCFTAcademics.CourseInfoModel
@using BL;
@{
    var course = (Course)ViewData["ViewData_Course"];
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Final Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student s in Student.GetStudentsByCourse(course))
        {
            <tr>
                <th scope="row">@s.StudentCode</th>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                @{
                    Grade g = @s.GetGradeForCourse(course);
                }
                @if (g != null)
                {
                    <td>@g.GradeAssigned</td>
                }
                else
                {
                    <td>No grade yet</td>
                }
            </tr>
        }
    </tbody>
</table>