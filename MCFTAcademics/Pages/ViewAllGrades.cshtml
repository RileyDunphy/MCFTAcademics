@page
@model MCFTAcademics.ViewAllGradesModel
@using BL;
@{
    ViewData["Title"] = "View All Grades";
}

<h2>Grades</h2>
@foreach (Course c in Course.GetAllCourses())
{
    <h4>@c.Name - @CourseCode.GetNewestCourseCodeById(c.Id).Code</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Final Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student s in Student.GetStudentsByCourseId(c.Id))
            {
                <tr>
                    <th scope="row">@s.StudentId</th>
                    <td>@s.FirstName</td>
                    <td>@s.LastName</td>
                    @{ 
                        Grade g = @s.GetGradeByCourseId(c.Id);
                    }
                    @if (g != null)
                    {
                        <td>@g.GradeAssigned</td>
                    }
                    else
                    {
                        <td>No grade yet</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}